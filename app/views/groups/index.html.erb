<div class="catgories-container d-flex flex-column">
  <%= render partial: "_partials/header", locals: { title: "Categories", back_path: root_path} %>
  <div class="category-cards text-center">
    <%if @groups.empty? %>
    <h2 class="fw-bold mt-5 display-3">There is no category</h2>
    <p class="mt-3 display-7">Try to add one with the below button</p>
    <%else%>
      <% @groups.each do |group|%>
        <%= link_to group_path(group), style: "text-decoration: none" do%>
          <%= render partial: "group", locals: { group: group } %>
        <%end%>
      <%end%>
    <%end%>
  </div>
  <%= link_to new_group_path, class: "btn btn-add", style: "margin: auto" do %>
    <span>
      ADD A NEW CATEGORY
    </span>
  <% end %>
</div>
