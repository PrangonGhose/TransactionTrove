<%= render partial: "_partials/header", locals: { title: "New Categories", back_path: root_path} %>
<div class='container d-flex justify-content-center align-items-center' style="height: 90vh">
  <div class="form">
    <%= form_with model: @group, url: groups_path do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Name of a new category" %>
      </div>
      <div class="form-group">
        <%= form.label :icon, "Enter URL to Icon" %>
        <%= form.text_field :icon, class: "form-control", placeholder: "e.g. 'https://picsum.photos/70/70'" %>
      </div>
      <%= form.submit "SAVE", class: "btn btn-add", style: "margin-top: 15rem" %>
    <% end %>
  </div>
