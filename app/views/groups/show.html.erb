<div>
  <%= render partial: "_partials/header", locals: { title: "Your Transactions", back_path: groups_path} %>

  <div class="card w-100 mt-1">
    <div class="g-0 d-flex align-items-center p-2 justify-content-between">
      <div class="">
        <div class="card-body">
          <h5 class="display-6 fw-bold text-center" style="color: rgb(156, 154, 154)"><%= @group.name %></h5>
        </div>
      </div>
      <div class="">
        <h4 class="fw-bold" style="color: rgb(156, 154, 154)"><%= number_to_currency(@group.expenses.sum(:amount)) %></h4>
      </div>
    </div>
  </div>

  <div class="text-center expenses-main-container p-2">
    <%if @expenses.empty? %>
    <h2 class="fw-bold mt-5 display-6">There Is No Transactions</h2>
    <p class="mt-3 display-7">Try to add one with the below button</p>
    <%else%>
      <% @expenses.each do |expense|%>
          <%= render partial: "expense", locals: { expense: expense } %>
      <%end%>
    <%end%>
  </div>
  <%= link_to new_group_expense_path(@group), class: "btn btn-add", style: "margin: auto" do %>
    <span>
      ADD A NEW TRANSACTION
    </span>
  <% end %>
</div>
