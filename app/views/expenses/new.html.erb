<%= render partial: "_partials/header", locals: { title: "New Transaction", back_path: group_path(id: params[:group_id])} %>
<div class='container d-flex justify-content-center align-items-center' style="height: 88vh">
  <div class="form">
    <%= form_with(model: @expense, url: group_expenses_path, method: :post, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :amount %>
        <%= form.number_field :amount, class: "form-control", required: true, step: "0.01" %>
      </div>
      <div class="d-flex align-items-center">
        <div class="d-flex flex-column" style="width: 30%; height: 30vh; overflow-y: scroll">
          <%= form.label :group_ids, "Select categories" %>
          <%= form.collection_check_boxes :group_ids, @groups, :id, :name %>
        </div>
        <% if flash[:error] %>
          <span class="alert alert-danger container" style="height: fit-content; width: fit-content"><%= flash[:error] %></span>
        <% end %>
      </div>
      <%= form.submit "SAVE", class: "btn btn-add", style: "margin-top: 8rem" %>
    <% end %>
  </div>
</div>
